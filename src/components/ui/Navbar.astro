---
import { profile } from '../../settings'
import DarkLightController from './DarkLightController.astro'
import { template } from '@/settings'

const { fullName, title } = profile
---
<header class='w-full border-b bg-base-200 text-base-content'>
	<nav class='mx-auto flex w-full max-w-6xl items-center justify-between gap-4 px-4 py-3'>
		<a href={`${template.base}/`} class='flex items-center gap-3 min-w-0'>
			<div class='min-w-0'>
				<div class='truncate font-black'>{fullName}</div>
				{title && <div class='truncate text-sm opacity-70'>{title}</div>}
			</div>
		</a>

		<div class='flex items-center gap-2 sm:gap-4'>
			<a href={`${template.base}/`} class='btn btn-ghost btn-sm'>Home</a>
			<a href={`${template.base}/#education`} class='btn btn-ghost btn-sm'>Education</a>
			<a href={`${template.base}/#experience`} class='btn btn-ghost btn-sm'>Experience</a>
			<DarkLightController />
		</div>
	</nav>
</header>
